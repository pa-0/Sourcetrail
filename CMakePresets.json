{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc-12",
                "CMAKE_CXX_COMPILER": "g++-12"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "window",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ci_gnu_release",
            "displayName": "CI GNU Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc-12",
                "CMAKE_CXX_COMPILER": "g++-12",
                "CMAKE_BUILD_TYPE": "Release",
                "USE_ALTERNATE_LINKER": "mold",
                "ENABLE_COVERAGE": "ON",
                "ENABLE_UNIT_TEST": "ON",
                "ENABLE_GUI_TEST": "ON",
                "ENABLE_INTEGRATION_TEST": "ON",
                "CMAKE_TOOLCHAIN_FILE": ".conan/gcc/build/Release/generators/conan_toolchain.cmake"
            }
        },
        {
            "name": "ci_clang_release",
            "displayName": "CI Clang Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-15",
                "CMAKE_CXX_COMPILER": "clang++-15",
                "CMAKE_BUILD_TYPE": "Release",
                "USE_ALTERNATE_LINKER": "mold",
                "ENABLE_COVERAGE": "ON",
                "ENABLE_UNIT_TEST": "ON",
                "ENABLE_GUI_TEST": "ON",
                "ENABLE_INTEGRATION_TEST": "ON",
                "CMAKE_TOOLCHAIN_FILE": ".conan/clang/build/Release/generators/conan_toolchain.cmake"
            }
        },
        {
            "name": "ci_msvc_release",
            "displayName": "CI VC++ Release",
            "binaryDir": "${sourceDir}/build/",
            "generator": "Ninja",
            "toolset": {
                "value": "v143",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_POLICY_DEFAULT_CMP0091": "NEW",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "BUILD_CXX_LANGUAGE_PACKAGE": "OFF",
                "CMAKE_TOOLCHAIN_FILE": ".conan/msvc/build/Release/generators/conan_toolchain.cmake",
                "SR_IS_CI": "ON"
            },
            "inherits": [
                "window"
            ]
        }
    ]
}
